#!/bin/bash
# Shim: delegates to TypeScript implementation
#
# The Python implementation was removed in Spec 0039 TICK-001.
# This shim ensures backwards compatibility for existing workflows.

# Use local build if available (for development), else fallback to npx
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
LOCAL_CLI="$SCRIPT_DIR/../../packages/codev/dist/cli.js"

if [[ -f "$LOCAL_CLI" ]]; then
  exec node "$LOCAL_CLI" consult "$@"
else
  exec npx @cluesmith/codev consult "$@"
fi
